\renewcommand{\cleardoublepage}{%
	\clearpage
	\if@twoside 
		\ifodd\c@page
		\else
			\hbox{}
			\thispagestyle{empty}
			\newpage
			\if@twocolumn
				\hbox{}\newpage
			\fi
		\fi
	\fi
}

\newcommand*{\cleartoleftpage}{%	
	\clearpage
	\if@twoside
		\ifodd\c@page
			\hbox{}\newpage
			\if@twocolumn
				\hbox{}\newpage
			\fi
		\fi
	\fi
}

\newcommand{\blankpage}[1]{%
	\afterpage{\thispagestyle{empty}#1\clearpage}
}

\newcommand{\rightblankpage}[1]{%
	\ifodd\value{page}
		\expandafter\afterpage%
	\else
	\fi
	{\blankpage{#1}}
}

\newcommand{\leftblankpage}[1]{%
	\ifodd\value{page}
	\else
		\expandafter\afterpage%
	\fi
	{\blankpage{#1}}
}

\newcommand{\doubleblankpage}[3][l]{
	%
	% [#1] : (optional) r | l (first page starts on a left or right page)
	% [#2] : code for the first blank page
	% [#3] : code for the second blank page
	
	%
	\if#1r  % start on a right page
		\rightblankpage{
			#2
			\leftblankpage{#3}
		}
	\else	% start on a left page
		\leftblankpage{
			#2
			\rightblankpage{#3}
		}	
	\fi
}




